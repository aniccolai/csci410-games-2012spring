//This is the class for the cursor. It will display to the user
// where they want to build.

class Cursor {
	field int x;
	field int y;
	field int max_x;
	field int max_y;
	
	constructor Cursor new()
	{
		let x = 0;
		let y = 0;
		let max_x = 288;
		let max_y = 192;
		return this;
	}
	
	method void dispose()
	{
		do Memeory.deAlloc(this);
		return;
	}
	
	method void draw()
	{
		do Screen.setColor(true);
		do Screen.drawRectangle(x+15, y, x+17, y+3);
		do Screen.drawRectangle(x, y+15, x+3, y+17);
		do Screen.drawRectangle(x+15, y+29, x+17, y+32);
		do Screen.drawRectangle(x+29, y+15, x+32, y+17);
		return;
	}
	method int getX()
	{
		return x;
	}
	method int getY()
	{
		return y;
	}
	method void incX()
	{
		if(~(x = max_x))
		{
			let x = x+32;
		}
		return;
	}
	method void decX()
	{
		if(~(x = 0))
		{
			let x = x-32;
		}
		return;
	}
	method void incY()
	{
		if (~(y = max_y))
		{
			let y = y+32;
			if((y = 96))
			{
				let y = y+32;
			}
		}
		return;
	}
	method void decY()
	{
		if (~(y = 0))
		{
			let y = y-32;
			if((y = 96))
			{
				let y = y-32;
			}
		}
		return;
	}
}