
class InGameDisplayPanel {
	field int gold;
	field Tower currentTower;
	field int score;
	field int level;
	field int lives;
	
	constructor InGameDisplayPanel new()
	{
		let gold = 100;
		let score = 0;
		let level = 0;
		let lives = 20;
		return this;
	}
	
	method void loseLife()
	{
		let lives = lives - 1;
		return;
	}
	
	method void dispose()
	{
		do Memory.deAlloc(this);
		return;
	}
	
	method int getLevel()
	{
		return level;
	}
	
	method int getGold()
	{
		return gold;
	}
	
	method int getLives()
	{
		return lives;
	}
	
	method void increaseGold()
	{
		let gold = gold + level;
		return;
	}
	
	method void increaseScore()
	{
		let score = score + level;
		return;
	}
	
	method void increaseLevel()
	{
		let level = level + 1;
		return;
	}
	
