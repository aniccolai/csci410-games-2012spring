		let strBIns2 = "tower.";
		let strArrows1 = "Use the arrow keys";
		let strArrows2 = "to move around";
		let strUIns1 = "Press U to upgrade a";
		let strUIns2 = "tower.";
		let strSIns1 = "Hold S to start next";
		let strSIns2 = "wave.";
		let strtower1 = "Tower Level: ";
		let strtower2 = "Upgrade Cost: ";
		let strtower3 = "Tower Kills: ";
		let strtower4 = "Tower Attack: ";
		
		do Screen.setColor(true);
		do Screen.drawRectangle(320,0,511,255);
		do Screen.setColor(false);
		do Screen.drawRectangle(322,2,509,253);
